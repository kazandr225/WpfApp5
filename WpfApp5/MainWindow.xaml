<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Comic Sans MS" FontSize="15">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Image Margin="10,0" Source="/Images/school_logo.png"></Image>
            <Button Name="btnAdmin" Margin="10,0" Height="35" Width="200" Click="btnAdmin_Click">Режим администратора</Button>
        </StackPanel>

        <Frame Name="fMain" Grid.Row="1" NavigationUIVisibility="Hidden">
            
        </Frame>
        
    </Grid>
</Window>
